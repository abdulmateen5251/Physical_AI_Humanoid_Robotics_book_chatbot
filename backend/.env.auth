# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================

# Secret key for JWT signing (generate with: openssl rand -base64 32)
AUTH_SECRET=your-super-secret-jwt-key-change-this-in-production-please

# JWT token expiration (default: 7 days)
JWT_EXPIRES_IN=7d

# JWT issuer
JWT_ISSUER=pdcp-auth

# SQLite database for development (Prisma will use this)
DATABASE_URL="file:./prisma/dev.db"

# ========================================
# SERVER CONFIGURATION
# ========================================

# Port for the auth/API server
PORT=3000

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3001

# Node environment
NODE_ENV=development

# ========================================
# FEATURE FLAGS
# ========================================

FEATURE_QUESTIONNAIRE_ENABLED=true
FEATURE_RECOMMENDATIONS_ENABLED=true
FEATURE_TEMPLATES_ENABLED=true

# ========================================
# OAUTH PROVIDERS (Optional - for future use)
# ========================================

# GitHub OAuth
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
