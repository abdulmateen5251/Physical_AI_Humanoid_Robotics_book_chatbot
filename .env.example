# ========================================
# DOCKER COMPOSE ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your credentials
# This file is used by docker-compose.yml

# ========================================
# OPENAI CONFIGURATION
# ========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ========================================
# QDRANT CLOUD CONFIGURATION
# ========================================
# Sign up at: https://qdrant.io (Free Tier available)
# Your Qdrant Cloud URL (e.g., https://xxxxxx-xxxxx.qdrant.io)
QDRANT_URL=https://your-qdrant-instance.qdrant.io
QDRANT_API_KEY=ey_your_qdrant_api_key_here
QDRANT_COLLECTION=book_chunks

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For production: Use Neon Postgres - https://neon.tech
# DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require
# For local development: Use SQLite
DATABASE_URL=file:./dev.db

# ========================================
# RETRIEVAL CONFIGURATION (Optional)
# ========================================
TOP_K=5
SCORE_THRESHOLD=0.1
CHUNK_SIZE=500
CHUNK_OVERLAP=50
RATE_LIMIT_PER_MINUTE=10

# ========================================
# AUTH CONFIGURATION
# ========================================
# Secret key for JWT tokens and auth sessions (min 32 characters)
AUTH_SECRET=your_secret_key_here_min_32_chars_long_random_string
BETTER_AUTH_URL=http://localhost:3001

TOP_K=5
SCORE_THRESHOLD=0.1
CHUNK_SIZE=500
CHUNK_OVERLAP=50
RATE_LIMIT_PER_MINUTE=10
  